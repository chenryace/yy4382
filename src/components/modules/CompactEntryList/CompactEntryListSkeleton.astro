---
import CompactEntryListItem from "./CompactEntryListItem.astro";
import CompactEntryListYear from "./CompactEntryListYear.astro";
const currentYear = new Date().getFullYear();
---

{
  [1, 2].map((order) => (
    <CompactEntryListYear
      year={String(currentYear + 1 - order)}
      order={0}
      animated={false}
    >
      {[1, 2, 3].map(() => (
        <CompactEntryListItem title="" href="javascript:void(0)">
          <span slot="title" class="skeleton h-5 w-1/2 md:h-6" />
          <span class="skeleton h-3 w-3/4 md:h-4" />
        </CompactEntryListItem>
      ))}
    </CompactEntryListYear>
  ))
}
