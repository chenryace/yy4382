{post.data.tags && (
  <div class="flex flex-wrap">
    {post.data.tags.map((tag:string) => (
      <a href={`/tags/${tag}`} class="text-md btn-color rounded-lg px-3 py-1 mr-2 mb-2 before:content-['Â·']">
        {tag}
      </a>
    ))}
  </div>
)}