---
import SideCard from "./SideCard.astro";
import { getSortedPosts } from "@utils/content";
import { getPostPath } from "@utils/path";
const allPosts = await getSortedPosts();
const recentPosts = allPosts.slice(0, 5);
---

<SideCard cardTitle="最近文章" cardLink="/achieve">
  <ul class="flex flex-col space-y-2">
    {
      recentPosts.map((entry, index) => (
        <li class="btn-plain hover:translate-x-1 rounded-md px-2 py-1">
          <a href={getPostPath(entry)} class="select-none text-sm line-clamp-2">
            {entry.data.title}
          </a>
        </li>
      ))
    }
  </ul>
</SideCard>
