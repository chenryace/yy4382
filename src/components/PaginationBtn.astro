---
import { Icon } from "astro-icon/components";
const { page } = Astro.props;
---

<div class="flex rounded-md justify-center">
  <div
    class="btn-regular bg-white w-8 h-8 flex items-center justify-center rounded-l-md"
  >
    {
      page.currentPage > 1 ? (
        <a href={page.url.prev}>
          <Icon name="mdi:chevron-double-left" size={32} />
        </a>
      ) : (
      <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 15 15"><path fill="currentColor" d="M3.64 2.27L7.5 6.13l3.84-3.84A.92.92 0 0 1 12 2a1 1 0 0 1 1 1a.9.9 0 0 1-.27.66L8.84 7.5l3.89 3.89A.9.9 0 0 1 13 12a1 1 0 0 1-1 1a.92.92 0 0 1-.69-.27L7.5 8.87l-3.85 3.85A.92.92 0 0 1 3 13a1 1 0 0 1-1-1a.9.9 0 0 1 .27-.66L6.16 7.5L2.27 3.61A.9.9 0 0 1 2 3a1 1 0 0 1 1-1c.24.003.47.1.64.27"/></svg>
      )
    }
  </div>
  <div class="btn-regular-base bg-white w-fit h-8 px-2 tracking-wider flex items-center justify-center border-x-2 border-btn_bg dark:border-btn_bg_d">
    {page.currentPage}/{page.lastPage}
  </div>
  <div
    class="btn-regular bg-white w-8 h-8 flex items-center justify-center rounded-r-md"
  >
    {
      page.currentPage !== page.lastPage ? (
        <a href={page.url.next}>
          <Icon name="mdi:chevron-double-right" size={32} />
        </a>
      ) : (
      <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 15 15"><path fill="currentColor" d="M3.64 2.27L7.5 6.13l3.84-3.84A.92.92 0 0 1 12 2a1 1 0 0 1 1 1a.9.9 0 0 1-.27.66L8.84 7.5l3.89 3.89A.9.9 0 0 1 13 12a1 1 0 0 1-1 1a.92.92 0 0 1-.69-.27L7.5 8.87l-3.85 3.85A.92.92 0 0 1 3 13a1 1 0 0 1-1-1a.9.9 0 0 1 .27-.66L6.16 7.5L2.27 3.61A.9.9 0 0 1 2 3a1 1 0 0 1 1-1c.24.003.47.1.64.27"/></svg>
      )
    }
  </div>
</div>
