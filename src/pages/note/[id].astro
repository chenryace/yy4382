---
import NoteCard from "@comp/modules/Note/NoteCard.astro";
import NoteCardDefer from "@comp/modules/Note/NoteCardDefer.astro";
import BaseLayout from "@layouts/BaseLayout.astro";
import { getSeo } from "@utils/SEO";

export const prerender = false;

const pageId = Astro.params.id;

const seo = getSeo({
  title: "Notes",
  description: "A collection of notes on various topics.",
  type: "website",
  noindex: true,
});
---

<BaseLayout seoConfig={seo}>
  <NoteCardDefer server:defer pageId={pageId ?? ""}>
    <Fragment slot="fallback">
      <NoteCard />
    </Fragment>
  </NoteCardDefer>
</BaseLayout>
