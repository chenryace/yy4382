---
import { ViewTransitions } from "astro:transitions";
import Footer from "../components/Footer.astro";
import SideBar from "../components/sidebar/SideBar.astro";
import Navbar from "../components/Navbar.astro";
import "../styles/utils.css";
import "../styles/buttons.css";
import { type TocItem } from "../config";
interface Props {
  pageTitle: string;
  tocList?: TocItem[];
}
const { pageTitle, tocList } = Astro.props;
---

<html lang="zh-cn" class="dark">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    {
      Astro.url.hostname !== "localhost" &&
      Astro.url.hostname !== "127.0.0.1" ? (
        <script
          defer
          data-domain="blog.yfi.moe"
          src="https://analy.yfi.moe/js/script.js"
        />
      ) : (
        ""
      )
    }
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>{pageTitle + "Yunfi's Blog"}</title>
    <ViewTransitions />
  </head>
  <body
    class="bg-[oklch(0.95_0.01_var(--hue))] dark:bg-[oklch(16%_0.014_var(--hue))] transition"
  >
    <div
      class="flex flex-col m-auto max-w-sm md:max-w-md lg:max-w-5xl xl:max-w-6xl min-h-screen gap-4"
    >
      <div class="">
        <Navbar/>
      </div>
      <div class="flex flex-col lg:flex-row flex-grow gap-4">
        <div class="lg:w-3/4">
          <slot />
        </div>
        <div class="lg:w-1/4">
          <SideBar tocList={tocList} />
        </div>
      </div>
      <div class="">
        <Footer />
      </div>
    </div>
  </body>
</html>
