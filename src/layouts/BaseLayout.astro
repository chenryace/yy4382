---
import { ViewTransitions } from "astro:transitions";
import Footer from "../components/Footer.astro";
import SideBar from "../components/sidebar/SideBar.astro";
import Navbar from "../components/Navbar.astro";
import { SEO } from "astro-seo";
import "../styles/utils.css";
import "../styles/buttons.css";
import { type TocItem, type SeoConfig } from "../config";
interface Props {
  tocList?: TocItem[];
  seoConfig: SeoConfig;
}
const { tocList, seoConfig } = Astro.props;
---

<html lang="zh-cn" class="dark">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/x-icon" href="/favicon.ico" sizes="32x32" />
    <link rel="icon" type="image/png" href="/favicon.png" sizes="256x256" />
    <link rel="icon" type="image/png" href="/favicon-sm.png" sizes="64x64" />
    {
      Astro.url.hostname !== "localhost" &&
      Astro.url.hostname !== "127.0.0.1" ? (
        <script
          defer
          data-domain="blog.yfi.moe"
          src="https://analy.yfi.moe/js/script.js"
        />
      ) : (
        ""
      )
    }
    <SEO
      {...seoConfig}
      titleTemplate="%s - Yunfi's blog"
      titleDefault="Yunfi's Blog"
    />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <ViewTransitions />
  </head>
  <body
    class="bg-[oklch(0.95_0.01_var(--hue))] dark:bg-[oklch(16%_0.014_var(--hue))] transition"
  >
    <div class="w-[calc(100%-2rem)] xl:max-w-6xl mx-auto min-h-screen">
      <div class="grid w-full
      grid-cols-1 lg:grid-cols-[75%_25%]">
        <nav class="lg:col-span-2 mb-4">
          <Navbar />
        </nav>

        <div class="mb-4 lg:mr-4">
          <slot />
        </div>
        <div class="mb-4 mx-4 lg:mx-0">
          <SideBar tocList={tocList} />
        </div>

        <div class="lg:col-span-2">
          <Footer />
        </div>
      </div>
    </div>
  </body>
</html>
