---
import NoGridLayout from "@layouts/NoGridLayout.astro";
import HomeBento from "@comp/modules/HomeBento";
import { getSeo } from "@utils/SEO";
const seoConfig = getSeo({
  title: "首页",
  description: "笔记与分享，代码和生活",
});
---

<NoGridLayout seoConfig={seoConfig} navStats={"首页"}>
  <div
    class="my-8 w-full animate-onload overflow-hidden lg:ml-[calc(50%-50vw)] lg:w-screen lg:max-w-screen-xl lg:px-4 xl:ml-[calc(50%-640px)]"
  >
    <HomeBento />
  </div>
</NoGridLayout>
