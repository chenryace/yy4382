---
import { cn } from "@utils/cn";
import { getPostPath } from "@utils/path";
import { Icon } from "astro-icon/components";
import type { CollectionEntry } from "astro:content";
import type { ClassValue } from "clsx";

type Props = {
  post: CollectionEntry<"post">;
  right?: boolean;
  class?: ClassValue;
};
const { post, right, class: className } = Astro.props;
---

<div class={cn("@container")}>
  <a
    class={cn([
      "flex items-center h-full",
      "border-container",
      right && "flex-row-reverse",
      className,
    ])}
    href={getPostPath(post)}
  >
    <Icon
      name={!right ? "mingcute:arrows-left-line" : "mingcute:arrows-right-line"}
      size={36}
      class="shrink-0"
    />
    <div class={right ? "flex flex-col items-end" : ""}>
      <p class="text-sm text-comment">上一篇</p>
      <p class="@lg:text-lg">{post.data.title}</p>
    </div>
  </a>
</div>

<style>
  @reference "../../../styles/base.css";
  a {
    @apply transition-colors hover:bg-gray-200 dark:hover:bg-gray-800;
    @apply gap-4 px-6 py-6 @lg:gap-8 @lg:px-16 @lg:py-8;
  }
</style>
