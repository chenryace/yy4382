{
  "$schema": "https://turbo.build/schema.json",
  "ui": "tui",
  "globalEnv": [
    "VERCEL_ENV",
    "ARTICLE_PAT",
    "POST_GH_INFO",
    "PAGE_GH_INFO",
    "UPSTASH_REDIS_REST_URL",
    "UPSTASH_REDIS_REST_TOKEN",
    "CONTENT_REFRESH_TOKEN",
    "DATABASE_URL",
    "BETTER_AUTH_SECRET",
    "GITHUB_CLIENT_ID",
    "GITHUB_CLIENT_SECRET",
    "EMAIL_NOTIFICATION_ENABLED",
    "EMAIL_FROM",
    "SMTP_HOST",
    "SMTP_PORT",
    "SMTP_SECURE",
    "SMTP_USER",
    "SMTP_PASS"
  ],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "cache": false,
      "inputs": ["$TURBO_DEFAULT$", ".env*"]
    },
    "dev": {
      "persistent": true,
      "cache": false
    },
    "check-types": {
      "cache": false
    },
    "lint": {
      "cache": false
    }
  }
}
