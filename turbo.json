{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "cache": false,
      "env": [
        "LOCAL_PREVIEW",
        "VERCEL_ENV",
        "ARTICLE_PAT",
        "POST_GH_INFO",
        "PAGE_GH_INFO",
        "UPSTASH_REDIS_REST_URL",
        "UPSTASH_REDIS_REST_TOKEN",
        "NEXT_PUBLIC_POSTHOG_KEY",
        "NEXT_PUBLIC_POSTHOG_HOST"
      ]
    },
    "dev": {
      "persistent": true,
      "cache": false,
      "env": [
        "LOCAL_PREVIEW",
        "VERCEL_ENV",
        "POST_GH_INFO",
        "PAGE_GH_INFO",
        "UPSTASH_REDIS_REST_TOKEN",
        "UPSTASH_REDIS_REST_URL",
        "NEXT_PUBLIC_POSTHOG_KEY",
        "NEXT_PUBLIC_POSTHOG_HOST"
      ]
    },
    "check-types": {
      "dependsOn": ["^check-types"],
      "cache": false,
      "env": ["ARTICLE_PAT", "POST_GH_INFO", "PAGE_GH_INFO"]
    }
  }
}
