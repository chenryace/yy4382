{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "fetch-article": {
      "cache": false,
      "env": ["ARTICLE_PAT"]
    },
    "build": {
      "dependsOn": ["^build"],
      "cache": false,
      "env": ["LOCAL_PREVIEW", "VERCEL_ENV"],
      "passThroughEnv": ["VERCEL_AUTOMATION_BYPASS_SECRET"]
    },
    "dev": {
      "persistent": true,
      "cache": false,
      "env": ["LOCAL_PREVIEW", "VERCEL_ENV", "OG_IMG_ENDPOINT", "OG_IMG_TOKEN"],
      "passThroughEnv": ["VERCEL_AUTOMATION_BYPASS_SECRET"]
    },
    "check-types": {
      "dependsOn": ["^check-types"],
      "cache": false
    },
    "format": {
      "dependsOn": [],
      "cache": false
    },
    "lint": {
      "dependsOn": ["^lint"],
      "cache": false
    }
  }
}
